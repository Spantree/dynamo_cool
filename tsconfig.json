{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "lib": ["esnext"],
        "module": "commonjs",
        "target": "esnext",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "outDir": "./lib"
    },
    "include": [
        "./src/**/*"
    ]
}